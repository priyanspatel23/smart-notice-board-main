<%- include('./partials/header') %>

    <!-- Filter Bar -->
    <div class="filter-bar animate-fade-in">
        <div class="filter-group">
            <div class="dropdown">
                <button class="dropdown-toggle-custom" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-layer-group text-muted"></i>
                    <span>
                        <% let deptName='All Departments' ; if(currentDept !=='all' && departments) { const
                            d=departments.find(d=> d._id.toString() === currentDept);
                            if(d) deptName = d.name;
                            }
                            %>
                            <%= deptName %>
                    </span>
                    <i class="fas fa-chevron-down ms-2 text-muted" style="font-size: 0.75rem;"></i>
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/?filter=<%= currentFilter %>&dept=all">All Departments</a></li>
                    <% if(departments) { %>
                        <% departments.forEach(dept=> { %>
                            <li><a class="dropdown-item" href="/?filter=<%= currentFilter %>&dept=<%= dept._id %>">
                                    <%= dept.name %>
                                </a></li>
                            <% }) %>
                                <% } %>
                </ul>
            </div>

            <div class="filter-tabs d-none d-md-flex">
                <a href="/?filter=all&dept=<%= currentDept %>" class="text-decoration-none">
                    <button class="filter-tab <%= currentFilter === 'all' ? 'active' : '' %>"><i
                            class="far fa-calendar-alt me-1"></i> All</button>
                </a>
                <a href="/?filter=today&dept=<%= currentDept %>" class="text-decoration-none">
                    <button class="filter-tab <%= currentFilter === 'today' ? 'active' : '' %>">Today</button>
                </a>
                <a href="/?filter=upcoming&dept=<%= currentDept %>" class="text-decoration-none">
                    <button class="filter-tab <%= currentFilter === 'upcoming' ? 'active' : '' %>">Upcoming</button>
                </a>
                <a href="/?filter=past&dept=<%= currentDept %>" class="text-decoration-none">
                    <button class="filter-tab <%= currentFilter === 'past' ? 'active' : '' %>">Past</button>
                </a>
            </div>
        </div>

        <button class="btn-refresh" onclick="window.location.href='/'">
            <i class="fas fa-sync-alt" style="font-size: 0.9rem;"></i>
        </button>
    </div>

    <!-- Notices Grid -->
    <div class="notices-grid animate-fade-in" style="animation-delay: 0.1s;">
        <% if(notices && notices.length> 0) { %>
            <% notices.forEach(notice=> { %>
                <div class="notice-card">
                    <div class="notice-header">
                        <span class="notice-badge <%= notice.department ? 'badge-dept' : 'badge-public' %>">
                            <%= notice.department ? notice.department.name : 'All Departments' %>
                        </span>
                        <span class="notice-date">
                            <%= new Date(notice.date).toLocaleDateString(undefined, { month: 'short' , day: 'numeric' })
                                %>
                        </span>
                    </div>
                    <h3 class="notice-title">
                        <%= notice.title %>
                    </h3>
                    <p class="notice-desc" style="flex: 1;">
                        <%= notice.description.substring(0, 100) %>...
                    </p>

                    <% if(notice.fileUrl) { %>
                        <div class="mt-3 pt-3 border-top" style="border-color: #f3f4f6 !important;">
                            <a href="<%= notice.fileUrl %>" target="_blank" class="text-decoration-none"
                                style="color: var(--primary-color); font-size: 0.875rem; font-weight: 500;">
                                <i class="fas fa-paperclip me-1"></i> Attachment
                            </a>
                        </div>
                        <% } %>
                </div>
                <% }) %>
                    <% } else { %>
                        <!-- Empty Placeholders or Message -->
                        <% if(currentFilter==='all' && currentDept==='all' ) { %>
                            <!-- Only show skeletons on initial load/all -->
                            <% for(let i=0; i<6; i++) { %>
                                <div class="placeholder-card d-flex align-items-center justify-content-center"></div>
                                <% } %>
                                    <% } else { %>
                                        <div class="col-12 py-5 text-center" style="grid-column: 1 / -1;">
                                            <div class="empty-state border-0 shadow-none bg-transparent">
                                                <div class="empty-icon text-muted mb-3" style="font-size: 3rem;">
                                                    <i class="far fa-clipboard"></i>
                                                </div>
                                                <h4 class="text-muted">No notices found</h4>
                                                <p class="text-muted small">Try adjusting your filters</p>
                                                <a href="/" class="btn btn-outline-primary btn-sm mt-3">Reset
                                                    Filters</a>
                                            </div>
                                        </div>
                                        <% } %>
                                            <% } %>
    </div>

    <%- include('./partials/footer') %>
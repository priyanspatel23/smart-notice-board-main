<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= pageTitle %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <div class="admin-layout">
        <%- include('../partials/sidebar') %>

            <div class="admin-main">
                <%- include('../partials/topbar') %>

                    <main class="admin-content animate-fade-in">
                        <div class="max-w-2xl mx-auto">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div>
                                    <h2 class="h4 font-bold text-gray-800 mb-1">Edit Student</h2>
                                    <p class="text-muted small">Update student details</p>
                                </div>
                                <a href="/admin/students" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-arrow-left me-2"></i> Back
                                </a>
                            </div>

                            <div class="admin-card">
                                <form action="/admin/students/edit/<%= student._id %>" method="POST">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label-custom">Full Name</label>
                                            <input type="text" name="name" class="form-control-custom" required
                                                value="<%= student.name %>">
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label-custom">Roll Number</label>
                                            <input type="text" name="rollNumber" class="form-control-custom" required
                                                value="<%= student.rollNumber %>">
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label-custom">Email Address</label>
                                        <input type="email" name="email" class="form-control-custom" required
                                            value="<%= student.email %>">
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label-custom">Mobile Number</label>
                                            <input type="tel" name="mobileNumber" class="form-control-custom" required
                                                value="<%= student.mobileNumber %>">
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label-custom">Year Class</label>
                                            <select name="yearClass" class="form-control-custom" required>
                                                <option value="" disabled>Select Year</option>
                                                <% ['1st Year', '2nd Year' , '3rd Year' , '4th Year' ].forEach(year=> {
                                                    %>
                                                    <option value="<%= year %>" <%=student.yearClass===year ? 'selected'
                                                        : '' %>><%= year %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label-custom">Department</label>
                                        <select name="department" class="form-control-custom" required>
                                            <option value="" disabled>Select Department</option>
                                            <% departments.forEach(dept=> { %>
                                                <option value="<%= dept._id %>" <%=student.department &&
                                                    student.department.toString()===dept._id.toString() ? 'selected'
                                                    : '' %>>
                                                    <%= dept.name %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>

                                    <div class="d-flex justify-content-end gap-2 mt-4">
                                        <a href="/admin/students" class="btn btn-light border">Cancel</a>
                                        <button type="submit" class="btn btn-primary px-4">Update Student</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </main>
            </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
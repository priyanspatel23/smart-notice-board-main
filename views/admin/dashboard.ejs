<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= pageTitle %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <div class="admin-layout">
        <%- include('../partials/sidebar') %>

            <div class="admin-main">
                <!-- Topbar removed/hidden in screenshot? No, let's keep it but minimal -->
                <%- include('../partials/topbar') %>

                    <main class="admin-content animate-fade-in">

                        <h2 class="h4 font-bold text-gray-800 mb-1">Dashboard</h2>
                        <p class="text-muted small mb-4">Welcome to the admin panel</p>

                        <!-- Stats Grid - Exactly 4 cards -->
                        <div class="row g-4 mb-4">
                            <div class="col-md-3">
                                <div class="stat-card">
                                    <div>
                                        <div class="stat-label">Total Students</div>
                                        <div class="stat-value">
                                            <%= stats.students %>
                                        </div>
                                    </div>
                                    <div class="stat-icon bg-blue-100 text-blue-600">
                                        <i class="fas fa-users"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="stat-card">
                                    <div>
                                        <div class="stat-label">Departments</div>
                                        <div class="stat-value">
                                            <%= stats.departments %>
                                        </div>
                                    </div>
                                    <div class="stat-icon bg-blue-100 text-blue-600">
                                        <i class="fas fa-building"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="stat-card">
                                    <div>
                                        <div class="stat-label">Active Notices</div>
                                        <div class="stat-value">
                                            <%= stats.activeNotices %>
                                        </div>
                                    </div>
                                    <div class="stat-icon bg-blue-100 text-blue-600">
                                        <i class="fas fa-bell"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="stat-card">
                                    <div>
                                        <div class="stat-label">Total Notices</div>
                                        <div class="stat-value">
                                            <%= stats.notices %>
                                        </div>
                                    </div>
                                    <div class="stat-icon bg-blue-100 text-blue-600">
                                        <i class="fas fa-file-alt"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Recent Notices List -->
                            <div class="col-md-8">
                                <div class="admin-card">
                                    <h5 class="mb-4 fw-bold d-flex align-items-center gap-2">
                                        <i class="far fa-bell"></i> Recent Notices
                                    </h5>

                                    <div class="d-flex flex-column gap-3">
                                        <% if (recentNotices && recentNotices.length> 0) { %>
                                            <% recentNotices.forEach(notice=> { %>
                                                <div class="p-3 border rounded-3 bg-light">
                                                    <div class="d-flex justify-content-between align-items-start mb-1">
                                                        <h6 class="mb-0 fw-semibold">
                                                            <%= notice.title %>
                                                        </h6>
                                                        <% if (notice.department) { %>
                                                            <span class="badge bg-white text-dark border">
                                                                <%= notice.department.name %>
                                                            </span>
                                                            <% } %>
                                                    </div>
                                                    <small class="text-muted">
                                                        <%= new Date(notice.date).toLocaleDateString('en-US', {
                                                            month: 'short' , day: 'numeric' , year: 'numeric' }) %>
                                                    </small>
                                                </div>
                                                <% }) %>
                                                    <% } else { %>
                                                        <p class="text-muted">No recent notices.</p>
                                                        <% } %>
                                    </div>
                                </div>
                            </div>

                            <!-- Students by Department -->
                            <div class="col-md-4">
                                <div class="admin-card">
                                    <h5 class="mb-4 fw-bold d-flex align-items-center gap-2">
                                        <i class="far fa-user"></i> Students by Department
                                    </h5>

                                    <div class="d-flex flex-column gap-3">
                                        <% if (departmentData && departmentData.length> 0) { %>
                                            <% departmentData.forEach(dept=> { %>
                                                <div
                                                    class="d-flex justify-content-between align-items-center p-3 border rounded-3">
                                                    <span class="fw-medium">
                                                        <%= dept.name %>
                                                    </span>
                                                    <span class="badge bg-primary rounded-pill">
                                                        <%= dept.count %> students
                                                    </span>
                                                </div>
                                                <% }) %>
                                                    <% } else { %>
                                                        <p class="text-muted">No departments found.</p>
                                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </main>
            </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>